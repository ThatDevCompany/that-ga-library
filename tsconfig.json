{
	"compileOnSave": false,
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"sourceMap": false,
		"noImplicitAny": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*"]
		},
		"types": [
			"jasmine",
			"node"
		],
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2017",
			"dom"
		]
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
