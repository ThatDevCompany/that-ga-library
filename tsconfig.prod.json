{
	"compileOnSave": false,
	"compilerOptions": {
		"target": "es5",
		"outDir": "dist",
		"sourceMap": false,
		"declaration": true,
		"moduleResolution": "node",
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*"]
		},
		"types": [
			"jasmine",
			"node"
		],
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2017",
			"dom"
		]
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"src/testing",
		"**/*.spec.ts"
	]
}
